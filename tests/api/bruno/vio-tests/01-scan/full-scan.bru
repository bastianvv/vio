meta {
  name: full-scan
  type: http
  seq: 4
}

post {
  url: {{base_url}}{{api_path}}{{libraries_path}}/2/rescan
  body: none
  auth: inherit
}

tests {
  test("Should return 200", function () {
    expect(res.getStatus()).to.equal(200);
  });
  
  test("Should return scanned library results", function () {
    const res_body = res.getBody();
    
    expect(res_body).to.have.property("LibraryID");
    expect(res_body.FilesScanned).to.be.above(0);
    expect(res_body.Errors).to.be.null;
  });
  
  test("Scan does not delete media", () => {
    expect(res.body.Errors).to.be.null;
  });
}

settings {
  encodeUrl: true
  timeout: 0
}
