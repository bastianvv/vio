meta {
  name: list-seasons
  type: http
  seq: 3
}

get {
  url: {{base_url}}{{api_path}}{{series_path}}/1/seasons
  body: none
  auth: inherit
}

tests {
  test("Seasons list returned", () => {
    expect(Array.isArray(res.body)).to.be.true;
    expect(res.body.length).to.be.greaterThan(0);
  });
  
  for (const season of res.body) {
    test(`season ${season.id} has a number`, () => {
      expect(season.number).to.be.a("number");
    });
  }
}

settings {
  encodeUrl: true
  timeout: 0
}
